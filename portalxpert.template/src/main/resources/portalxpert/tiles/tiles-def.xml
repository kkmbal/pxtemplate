    </definition>
    
    
    <!-- ############################## Admin ############################## -->
	<!-- admin layout" -->    
    <!-- ### admin ### -->    
    <definition name=".adm/*" extends=".defaultLayout">  
    	<put-attribute name="left" value="/WEB-INF/jsp/portalxpert/adm/leftTree.jsp" />        
